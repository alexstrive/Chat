extends layout

block content
    .container(style="margin-top: 250px;")
        .col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
            .panel.panel-primary
                .panel-heading
                    h3.panel-title.text-center Вход
                .panel-body
                    if error
                        .alert.alert-danger #{error}
                    form(action="/auth" method="POST")
                        .form-group
                            label.control-label(for="login") Логин
                            input.form-control(name="login" type="text" id="login")
                        .form-group
                            label.control-label(for="password") Пароль
                            input.form-control(name="password" type="password" id="password")
                        .text-center
                            .btn-group
                                button.btn.btn-primary(type="submit") Вход
                                a.btn.btn-danger(href="/register") Регистрация